{
  "name": "facturacion-electron",
  "version": "1.0.0",
  "description": "Sistema de Facturación Electrónica para El Salvador con integración a Hacienda",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "facturacion",
    "electronica",
    "hacienda",
    "el-salvador",
    "DTE"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "electron-store": "^8.1.0",
    "node-forge": "^1.3.1",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^21.6.1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.facturacion.app",
    "productName": "Facturación Electrónica SV",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
